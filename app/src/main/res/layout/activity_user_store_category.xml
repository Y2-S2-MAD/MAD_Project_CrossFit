<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userStoreCategory">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Store"
                android:background="@color/Denim"
                android:gravity="center"
                android:textSize="28sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/protein2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:text="Protein"
                android:textColor="@color/black"
                android:background="#59039BE5"
                android:textSize="22sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="#c1c1c1"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Protein"
                android:visibility="gone"
                android:nestedScrollingEnabled="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ProteinNoData"
                android:orientation="vertical">

                <include layout="@layout/no_data_found"/>

            </LinearLayout>

            <TextView
                android:id="@+id/fitnessAcc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fitness Accessories"
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:background="#59039BE5"
                android:textStyle="bold"
                android:layout_marginTop="18dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="#c1c1c1"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/FitnessAcc"
                android:visibility="gone"
                android:nestedScrollingEnabled="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/FitnessAccNoData"
                android:orientation="vertical">

                <include layout="@layout/no_data_found"/>

            </LinearLayout>
            <TextView
                android:id="@+id/creatine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Creatine"
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:background="#59039BE5"
                android:textStyle="bold"
                android:layout_marginTop="18dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="#c1c1c1"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Creatine"
                android:visibility="gone"
                android:nestedScrollingEnabled="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/CreatineNoData"
                android:orientation="vertical">

                <include layout="@layout/no_data_found"/>

            </LinearLayout>
            <TextView
                android:id="@+id/fatBurns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fat Burns"
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:background="#59039BE5"
                android:textStyle="bold"
                android:layout_marginTop="18dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="#c1c1c1"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/FatBurns"
                android:visibility="gone"
                android:nestedScrollingEnabled="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/FatBurnsNoData"
                android:orientation="vertical">

                <include layout="@layout/no_data_found"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>