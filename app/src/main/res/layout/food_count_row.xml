<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_marginLeft="26dp"
    android:layout_marginRight="26dp"
    android:layout_marginTop="15dp">

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addfoodCountMealName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FoodNAme"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:visibility="invisible"
                android:id="@+id/addfoodCountWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:visibility="invisible"
                android:id="@+id/addfoodCountCalo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:visibility="invisible"
                android:id="@+id/addfoodCountCarbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:visibility="invisible"
                android:id="@+id/addfoodCountFat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:visibility="invisible"
                android:id="@+id/addfoodCountProtein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnAddFood1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Breakfast"
                android:textSize="10dp"
                android:textAllCaps="false"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnAddFood2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Lunch"
                android:layout_marginLeft="25dp"
                android:textSize="10dp"
                android:textAllCaps="false"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnAddFood3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Dinner"
                android:layout_marginLeft="23dp"
                android:textSize="10dp"
                android:textAllCaps="false"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>




    </LinearLayout>


</androidx.cardview.widget.CardView>
