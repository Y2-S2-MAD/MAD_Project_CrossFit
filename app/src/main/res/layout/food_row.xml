<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_marginLeft="26dp"
    android:layout_marginRight="26dp"
    android:layout_marginTop="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recyclemealName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FoodNAme"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Weight :"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/recycleGram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="gram"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/viewCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="calo : "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/recycleCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="calories"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/viewCrabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Crabs : "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/recycleCrabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="crabs"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/viewFat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Fat : "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/recycleFat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="fat"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/viewProtein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protein : "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/recycleProtein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="protein"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:text="Edit"
                android:background="@drawable/roundbutton"
                android:textAllCaps="false"
                app:icon="@drawable/ic_baseline_edit_24"
                app:iconGravity="start" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/roundbutton"
                android:text="Delete"
                android:textAllCaps="false"
                app:icon="@drawable/ic_baseline_delete_24"
                app:iconGravity="start" />

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>
